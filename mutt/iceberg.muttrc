color quoted2            color242    default
color quoted3            color252    default

color header             color110    default "[\-\.+_a-zA-Z0-9]+@[\-\.a-zA-Z0-9]+" # email
color body               color110    default "[\-\.+_a-zA-Z0-9]+@[\-\.a-zA-Z0-9]+" # email
color body               color110    default "(http|ftp|https)://[\-\.\,/+=&%~_:?\#a-zA-Z0-9]+" # URL

color sidebar_highlight  color110    color236
color sidebar_divider    color232    color232
color sidebar_flagged    color1      default
color sidebar_new        color110    default
