color indicator          color110      color237
color status             default       color235
color error              color203      color234

color normal             default       default
color tree               color242      default
color message            color203      color234

color signature          color255     default
color attachment         color110     color235
color search             color214     color1
color tilde              color110     default
color markers            color1       default
color bold               color1       default
color underline          color110     default

color hdrdefault         color243    default # default header lines
color header             color173    default  "^Subject:"

color index              default     default  ~N
color index              color243    default  "!~N"
